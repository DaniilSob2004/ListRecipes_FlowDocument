<Window x:Class="ListRecipes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="600" Width="1000" MinWidth="400" MinHeight="250" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="listBox" MouseDoubleClick="ListBox_MouseDoubleClick"/>
        <FlowDocumentScrollViewer Grid.Column="1" x:Name="scrollDoc"/>
    </Grid>

</Window>
